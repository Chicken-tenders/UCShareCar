<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="50"
        android:id="@+id/post_pic"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/starting_loc"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Origin:"
        android:textSize="20dp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ending_loc"
        android:layout_below="@+id/starting_loc"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Destination:"
        android:textSize="20dp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leaving_time"
        android:layout_below="@+id/ending_loc"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Departure Time:"
        android:textSize="20dp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avail_seats"
        android:layout_below="@+id/leaving_time"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Seats:"
        android:textSize="20dp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passenger_names"
        android:layout_below="@+id/avail_seats"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Passengers:"
        android:textSize="20dp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notes"
        android:layout_below="@+id/passenger_names"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Notes:"
        android:textSize="20dp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driver_status"
        android:layout_below="@+id/notes"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Driver Status:"
        android:textSize="20dp"
        android:textColor="#000"/>
</LinearLayout>